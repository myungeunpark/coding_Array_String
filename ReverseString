// Time :  O(N)  , Space : O(1) 
class Solution {
    public void reverseString(char[] s) {
        
        int mid = s.length/2;
        for(int i=0; i<mid; i++)            
            swap(s, i, s.length-1-i);          
    }
    
    private void swap(char [] s, int i, int j){
        
        char temp = s[i];
        s[i] = s[j];
        s[j] = temp;            
    }
        
}
